public class RequisitionApproval extends Task {

      private String requisition;         // FAB-BNK-234234
      private String description;         // Extension of SOW for iOS Architect 1-Jun-19 to 31-Dec-19
      private Amount amount;  
      private String supplier;
      
      private List<RequisitionLineItem>lineItems;

      private List<TaskHistory> history;
      private String lastApprovedBy;            // Last approver name from history
      private List<String> rfiMembers;    // Get the members names from history

public class RequisitionLineItem {
