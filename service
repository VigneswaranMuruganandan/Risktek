public class LeaveHistory extends Leave {
      private StaticData absenceStatus;   // SUBMITTED, SAVED, ORA_WITHDRAWN
      private StaticData leaveType;       // Military Service Leave,    Unpaid Hajj Leave,      Paternity Leave etc
      
      private StaticData relationshipType; // Optional:
      private StaticData reason;                // Optional: Family Reason, Work Related Injury, Work Incident, Cold/Flu
      private String comments;                  // Optional:

      private boolean reqSalaryAdvance;   // Optional:

      private String startDate;
      private String endDate;
      private int duration;

      private String createDate;
      private String personId;
      private String personNumber;


